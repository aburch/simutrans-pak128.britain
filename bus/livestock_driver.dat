# The old-fashioned way of moving livestock: just a man and dog,
# droving them along the road.

obj=vehicle
name=LivestockDrover
copyright=JamesPetts&JamesHood
engine_type=bio
waytype=road
freight=livestock
payload=35
power=5
# Average walking speed
speed=5
weight=0.75
axle_load=0
cost=2
length=6
runningcost=0
# Calibrated (approximately) to the cost of "agricultural labourer" here:
# https://www.pascalbonenfant.com/18c/wages.html
# (£25/annum, assuming 10 hours/day 6 days/week)
# Calibrated against goods prices in goods128.dat
# Figures for circa 1781
fixed_cost=350
intro_year=1700
intro_month=3
retire_year=1921
retire_month=3
sound=sandeepkurissery-flock-of-sheep.wav

# Presumably, it takes the farmer quite a while to gather
# all of the livestock together to take to market (etc.). 
min_loading_time=120
max_loading_time=300

increase_maintenance_after_years=25
years_before_maintenance_max_reached=75
increase_maintenance_by_percent=250

constraint[next][0]=none
constraint[prev][0]=none

